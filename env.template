# Environment Variables Template for Queue Monitor
# Copy this to .env.local and fill in your actual values

# Supabase Configuration
# You can find these in your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Gizmo API Configuration  
# These are your gaming center management system API credentials
API_BASE_URL=http://your-gizmo-server:port/api
API_AUTH=your_gizmo_api_username:password

# Optional: Cloudflare Configuration (if using video features)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Optional: Other configurations
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_ACCOUNT_ID=your_r2_account_id
R2_PUBLIC_URL=your_r2_public_url 